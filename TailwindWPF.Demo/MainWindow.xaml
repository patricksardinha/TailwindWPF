<Window x:Class="TailwindWPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TailwindWPF.Controls;assembly=TailwindWPF"
        xmlns:tw="clr-namespace:TailwindWPF.Styling;assembly=TailwindWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!-- Grid 3 cols 3 lines + gap -->
    <Grid tw:Tw.Class="grid-cols-3 grid-rows-3 gap-4">

        <TextBlock 
            Text="Cell 1,1"
            tw:Tw.Class="col-start-1 row-start-1 text-gray-500 text-3xl text-black text-center" />

        <Button 
            Content="Spans 2 columns"
            tw:Tw.Class="col-start-2 col-span-2 row-start-1 bg-red-500 text-white" />

        <Button 
            Content="Spans 2 rows"
            tw:Tw.Class="col-start-1 row-start-2 row-span-2 bg-green-500 text-white" />

        <TextBlock 
            Text="Center"
            tw:Tw.Class="col-start-2 row-start-2 font-bold text-black text-center" />

        <Button 
            Content="Full Width"
            Click="MyButton_Click"
            tw:Tw.Class="col-span-full row-start-3 bg-gray-500 text-white" />

    </Grid>
</Window>
